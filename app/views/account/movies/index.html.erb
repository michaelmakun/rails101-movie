<div class="col-md-12">

  <h2 class="text-center">我收藏的电影</h2>

  <table class="table table-bordered">
    <thead>
      <tr>
        <th>#</th>
        <th>电影名</th>
        <th>上映时间</th>
      </tr>
    </thead>
    <tbody>
      <% @movies.each do |movie| %>
        <tr>
          <td><%= movie.id %></td>
          <td><%= link_to(movie.title, movie_path(movie)) %></td>
          <td><%= movie.created_at %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>

<div class="text-center col-md-12 pagination">
  <%= will_paginate @movies, renderer: BootstrapPagination::Rails %>
</div>
