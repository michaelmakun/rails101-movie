<div class="col-md-12">

  <span class="pull-right">
    <% if current_user && current_user.movie_favorite?(@movie) %>
        <%= link_to("取消收藏", unlike_movie_path(@movie), method: :post, class: :"btn btn-danger btn-xs")%>
        <%= link_to("发表评论", new_movie_review_path(@movie), class: :"btn btn-primary pull-right") %>
    <% else %>
        <%= link_to("收藏成功", favorite_movie_path(@movie), method: :post, class: :"btn btn-success btn-xs") %>
    <% end %>
  </span>

<h1><%= @movie.title %></h1>

<p>
  <%= simple_format(@movie.description) %>
</p>

<table class="table table-bordered">
  <thead>
    <tr>
      <th>评论内容</th>
      <th>发表人</th>
      <th>发表时间</th>
      <th>管理选项</th>
    </tr>
  </thead>
  <tbody>
    <% @reviews.each do |review| %>
      <tr>
        <td><%= review.content %></td>
        <td><%= review.user.email %></td>
        <td><%= review.created_at %></td>
        <td>
          <% if current_user && current_user.movie_favorite?(@movie) %>
            <%= link_to("编缉评论", edit_movie_review_path(review.movie,review), class: :"btn btn-success btn-xs") %>
            <%= link_to("删除评论", movie_review_path(review.movie,review), method: :delete, class: :"btn btn-danger btn-xs") %>
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

</div>
