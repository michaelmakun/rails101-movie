<div class="col-md-12">
  <% if current_user && current_user == @movie.user %>
    <%= link_to("编缉电影", edit_movie_path(@movie), class: :"btn btn-warning pull-right")%>
  <% end %>
  <%= link_to("发表评论", new_movie_review_path(@movie), class: :"btn btn-primary pull-right") %>

<h1><%= @movie.title %></h1>

<p>
  <%= simple_format(@movie.description) %>
</p>

<table class="table table-bordered">
  <thead>
    <tr>
      <th>评论内容</th>
      <th>发表人</th>
      <th>发表时间</th>
    </tr>
  </thead>
  <tbody>
    <% @reviews.each do |review| %>
      <tr>
        <td><%= review.content %></td>
        <td><%= review.user.email %></td>
        <td><%= review.created_at %></td>
      </tr>
    <% end %>
  </tbody>
</table>

</div>
